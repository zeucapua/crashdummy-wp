---
const { node } = Astro.props;
const featuredImage = node.featuredImage.node;
---
<div class="flex flex-col w-1/3 border-4 border-white rounded-lg">
    <a href={node.slug}>
    <img src={featuredImage.mediaItemUrl} alt={featuredImage.altText} />
    <div class="flex flex-col p-4 text-white">
        <p class="text-2xl font-bold font-['Red Hat Display']">{node.title}</p>
        <p class="line-clamp-2" set:html={node.excerpt}></p>
    </div>
    </a>
</div>
